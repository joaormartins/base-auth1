{% extends 'templates/app.twig' %}

{% block content %}
<h3>Gerenciar Usu치rios</h3>
<div class="row">
	<div class="col-md-4">
		<form class="form" method="post" action="{{ path_for('admin.users.add') }}">
			<div class="form-group">
				<label>Nome</label>
				<input type="text" name="name" class="form-control" value="{{ old.name }}">
			</div>
			<div class="form-group">
				<label>Usu치rio</label>
				<input type="text" name="user" class="form-control" value="{{ old.user }}">
			</div>
			<div class="form-group">
				<label>Senha</label>
				<input type="password" name="password" class="form-control">
			</div>
			<input type="submit" value="Salvar" class="btn btn-primary">
		</form>
	</div>
	<div class="col-md-8">
		<h4>Usu치rios:</h4>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>#</th>
					<th>Nome</th>
					<th>Usu치rio</th>
					<th>Admin</th>
					<th>Editar</th>
					<th>Excluir</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.nome }}</td>
					<td>{{ user.usuario }}</td>
					<td>
						<input type="checkbox">
					</td>
					<td>
						<a class="btn btn-warning" href="#"><i class="fa fa-edit"></i></a>
					</td>
					<td>
						<a class="btn btn-danger" href="#"><i class="fa fa-trash"></i></a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% endblock %}